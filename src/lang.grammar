@top Program { expression* }

@skip { space | Comment }

expression { Statement | IfExpression | TimesExpression}

IfExpression { "if" Condition expression ("elif" Condition expression "end")* ("else" Condition expression "end")+ "end" }

TimesExpression { (Number|"forever") "times" expression "end" }


@tokens { 
  Condition { "true"|"false" }
  Statement { "move"|"jump" }
  Number { std.digit+ }
  space { std.whitespace+ }
  Comment { "//" ![\n]* }
}

@detectDelim